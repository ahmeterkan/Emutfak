                @Html.EnumDropDownListFor(model => model.paraBirimi, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.paraBirimi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
            </div>
            <a href="/Home/Index" class="btn btn-primary ">Geri Dön</a>

        </div>
    </div>
